//https://leetcode.com/problems/valid-perfect-square/#/description
// need to improve

class Solution {
public:
    bool isPerfectSquare(int num) {
        if (num==1) return true;
        int n = num/2;
        for (int i=2;i<=n;i++){
            if (i*i==num) return true;
        }
        return false;
    }
};
